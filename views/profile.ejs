
	<% layout('layout') -%>
	<div class="page-header">
		<h1><span class="fa fa-home"></span> Profile Page <small>All Accounts</small></h1>
	</div>

    <div class="row">

        <!-- LOCAL INFORMATION -->
        <div class="col-sm-6">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3><span class="fa fa-user"></span> Project Learn Account</h3>
                </div>
                <div class="panel-body">

                <% if (user.local.email) { %>
                <p style="word-wrap:break-word"> 
                    <strong>id</strong>: <%= user._id %><br>
                    <strong>First Name</strong>: <%= user.local.firstName %><br>
                    <strong>Last Name</strong>: <%= user.local.lastName %><br>
                    <strong>email</strong>: <%= user.local.email %><br>
                    <strong>password</strong>: <%= user.local.password %>
                </p>

                <a href="/unlink/local" class="btn btn-default">Unlink</a>
                <button class="btn btn-primary " data-toggle="modal" data-target="#myModal">
								  Edit
								</button>
                <% } else { %>
                <a href="/connect/local" class="btn btn-default">Connect Local</a>
                <% } %>
                </div>
            </div>
        </div>

        <!-- FACEBOOK INFORMATION -->
        <div class="col-sm-6">
            <div class="panel-group" id="accordian">
                <div class="panel panel-default">
                    <div class='panel-heading'>
                        <h3 class="text-primary panel-title">
                            <a data-toggle="collapse" data-parent="#accordian" href="#collapseFacebook">
                                <span class="fa fa-facebook"></span>  Facebook
                            </a>
                        </h3>
                    </div>
                    <div id="collapseFacebook" class="panel-collapse collapse in">
                        <div class="panel-body">
                        <% if (user.facebook.token) { %>
                        <p style="word-wrap:break-word">
                            <strong>id</strong>: <%= user.facebook.id %><br>
                            <strong>token</strong>: <%= user.facebook.token %><br>
                            <strong>email</strong>: <%= user.facebook.email %><br>
                            <strong>name</strong>: <%= user.facebook.name %><br>
                        </p>

                        <a href="/unlink/facebook" class="btn btn-primary">Unlink</a>
                        <% } else { %>
                        <a href="/connect/facebook" class="btn btn-primary">Connect Facebook</a>
                        <% } %>
                        </div>
                    </div>
                </div>
                <div class="panel panel-default">
                    <div class='panel-heading'>
                        <h3 class="text-primary panel-title">
                            <a data-toggle="collapse" data-parent="#accordian" href="#collapseTwitter">
                                <span class="fa fa-twitter"></span>  Twitter
                            </a>
                        </h3>
                    </div>
                    <div id="collapseTwitter" class="panel-collapse collapse">
                        <div class="panel-body">
                            <% if (user.twitter.token) { %>
                            <p style="work-wrap:break-word">
                                <strong>id</strong>: <%= user.twitter.id %><br>
                                <strong>token</strong>: <%= user.twitter.token %><br>
                                <strong>display name</strong>: <%= user.twitter.displayName %><br>
                                <strong>username</strong>: <%= user.twitter.username %>
                            </p>

                            <a href="/unlink/twitter" class="btn btn-info">Unlink</a>
                            <% } else { %>
                            <a href="/connect/twitter" class="btn btn-info">Connect Twitter</a>
                            <% } %>
                        </div>
                    </div>
                </div>
                <div class="panel panel-default">
                    <div class='panel-heading'>
                        <h3 class="text-danger panel-title">
                            <a data-toggle="collapse" data-parent="#accordian" href="#collapseGoogle">
                                <span class="fa fa-google-plus"></span>  Google
                            </a>
                        </h3>
                    </div>
                    <div id="collapseGoogle" class="panel-collapse collapse">
                        <div class="panel-body">
                            <% if (user.google.token) { %>
                            <p style:"work-wrap:break-word">
                                <strong>id</strong>: <%= user.google.id %><br>
                                <strong>token</strong>: <%= user.google.token %><br>
                                <strong>email</strong>: <%= user.google.email %><br>
                                <strong>name</strong>: <%= user.google.name %>
                            </p>

                            <a href="/unlink/google" class="btn btn-danger">Unlink</a>
                            <% } else { %>
                            <a href="/connect/google" class="btn btn-danger">Connect Google</a>
                            <% } %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    


<div class="modal fade" id="myModal">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title">Edit Local Account</h4>
      </div>
      <div class="modal-body">
        <div class="col-sm-6 col-sm-offset-3">

            <!-- LOGIN FORM -->
            <form action="/signup" method="post">
                <div class="form-group">
                    <label><%= user.local.firstName %>/label>
                    <input type="text" class="form-control" name="firstName">
                </div>
                <div class="form-group">
                    <label><%= user.local.lastName %></label>
                    <input type="text" class="form-control" name="lastName">
                </div>
                <div class="form-group">
                    <label><%= user.local.email %></label>
                    <input type="text" class="form-control" name="email">
                </div>
                <div class="form-group">
                    <label>Password</label>
                    <input type="password" class="form-control" name="password">
                </div>
            </form>

        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->